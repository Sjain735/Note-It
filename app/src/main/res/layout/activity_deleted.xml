<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainColor"
    tools:context="com.example.pawan.rs_application.deleted">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/del_toolbar"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:title="Trash"
        app:titleTextColor="@color/toolbarTitleColor"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/del_restore"
        android:src="@drawable/ic_undo_black_24dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="30dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/del_delete_forever"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:layout_alignParentBottom="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="100dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/del_rec_view"
        android:paddingTop="60dp">
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
