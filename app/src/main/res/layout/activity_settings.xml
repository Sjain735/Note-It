<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pawan.rs_application.settings"
    android:background="@color/mainColor">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_toolbar"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:title="Settings"
        app:titleTextColor="@color/toolbarTitleColor"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="65dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="App Theme"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardBackgroundColor="#28B463"
            android:elevation="16dp"
            cardview:cardCornerRadius="12dp"
            cardview:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/set_green"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_margin="5dp"
                android:clickable="true"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardBackgroundColor="#FFEC33"
            android:elevation="16dp"
            cardview:cardCornerRadius="12dp"
            cardview:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/set_yellow"
                android:layout_margin="5dp"
                android:clickable="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardBackgroundColor="#566573"
            android:elevation="16dp"
            cardview:cardCornerRadius="12dp"
            cardview:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/set_dark"
                android:layout_margin="5dp"
                android:clickable="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardBackgroundColor="#E67E22"
            android:elevation="16dp"
            cardview:cardCornerRadius="12dp"
            cardview:cardUseCompatPadding="true"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/set_orange"
                android:layout_margin="5dp"
                android:clickable="true" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
